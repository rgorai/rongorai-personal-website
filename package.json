{
  "name": "rongorai.github.io",
  "version": "1.0.0",
  "description": "Ron Gorai's personal website",
  "main": "server/index.js",
  "sourceType": "module",
  "scripts": {
    "start": "node server/index.js",
    "start-watch": "nodemon server/index.js",
    "dev": "concurrently \"npm run start-watch\" \"cd client && yarn dev\"",
    "heroku-postbuild": "npm install --prefix client && npm run build --prefix client",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rgorai/rongorai.github.io.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rgorai/rongorai.github.io/issues"
  },
  "homepage": "https://github.com/rgorai/rongorai.github.io#readme",
  "devDependencies": {
    "concurrently": "^6.5.0",
    "eslint": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "eslint-config-airbnb": "^19.0.2",
    "express": "^4.17.2",
    "mongodb": "^4.2.2",
    "path": "^0.12.7"
  },
  "engines": {
    "node": "16.0.0"
  }
}
